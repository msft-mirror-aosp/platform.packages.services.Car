<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/upper_app_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/lower_app_area_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/grip_bar"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="@dimen/grip_bar_height"
            android:background="@drawable/title_bar_background">
            <View
                android:id="@+id/title_handle_bar"
                android:layout_width="160dp"
                android:layout_height="6dp"
                android:background="#9aa0a6"
                android:layout_marginTop="25dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/lower_app_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_bar_area"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="136dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/bottom_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
