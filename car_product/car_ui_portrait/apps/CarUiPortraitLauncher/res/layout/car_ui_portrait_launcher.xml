<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom margin is used equal to the height of the control bar minus the rounded corner
         radius (240 - 48). This is to make sure we don't draw under the area that has a no chance
         of being shown. -->
    <FrameLayout
        android:id="@+id/upper_app_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/control_bar_height_minus_corner_radius"/>

    <LinearLayout
        android:id="@+id/lower_app_area_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/control_bar_height_minus_corner_radius"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/grip_bar"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="@dimen/grip_bar_height"
            android:background="@drawable/title_bar_background">
            <View
                android:id="@+id/grip_bar_view"
                android:layout_width="@dimen/grip_bar_width"
                android:layout_height="6dp"
                android:background="@color/car_surface_variant"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/immersive_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/lower_app_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/car_background"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_bar_area"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/control_bar_height"
        android:background="@drawable/control_bar_background"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/bottom_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_container"/>
</FrameLayout>
