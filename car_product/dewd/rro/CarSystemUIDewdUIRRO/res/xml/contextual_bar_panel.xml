  <Panel id="contextual_bar_panel" defaultVariant="@id/opened" role="@string/contextual_bar_component" displayId="0">
    <Variant id="@+id/base">
        <Layer layer="101"/>
    </Variant>
    <Variant id="@+id/opened" parent="@id/base">
        <Visibility isVisible="true"/>
        <Bounds left="0" bottom="@dimen/contextual_bar_bottom" width="100%" height="@dimen/contextual_bar_height" />
    </Variant>
    <Variant id="@+id/closed" parent="@id/base">
        <Visibility isVisible="false"/>
        <Bounds left="0" bottom="@dimen/contextual_bar_bottom" width="100%" height="@dimen/contextual_bar_height" />
    </Variant>

    <Transitions>
        <Transition onEvent="home_2_event" toVariant="@id/opened"/>
        <Transition onEvent="home_event" toVariant="@id/opened"/>
    </Transitions>
</Panel>
